---
import Layout from '~/layouts/PageLayout.astro';
---

<Layout>
  <div class="sm:h-screen w-screen flex flex-col items-center justify-center md:flex-row gap-y-5 px-3">
    <!-- Giants Causeway Tour Card -->
    <div class="h-fit bg-slate-900 dark:bg-white max-w-sm rounded overflow-hidden shadow-lg mt-16 sm:mt-0">
      <img src="/gallery/IMG-2305.jpg" class="object-cover" alt="" />
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-white dark:text-slate-900">Dunluce Castle Tour</div>
        <p class="text-gray-300 text-base dark:text-gray-700">
          Immerse yourself in ancient Ireland and explore the mesmerizing landscapes and natural beauty of the Dunluce
          Giants Causeway G.O.T Film Location tour.
        </p>
      </div>
      <div class="px-6 pt-4 pb-2">
        <a href="https://cal.com/tuckers-tours/dunluce-castle-tour"
          ><span
            class="transition-all dark:hover:bg-slate-900 dark:hover:text-white hover:bg-gray-50 inline-block bg-blue-200 rounded-full px-4 py-4 text-sm font-semibold text-gray-700 mr-2 mb-2"
            >Book Now</span
          ></a
        >
        <a href="/dunluce-castle-tour"
          ><span
            class="transition-all dark:hover:bg-slate-900 dark:hover:text-white hover:bg-gray-50 inline-block bg-blue-200 rounded-full px-4 py-4 text-sm font-semibold text-gray-700 mr-2 mb-2"
            >Details</span
          ></a
        >
      </div>
    </div>

    <!-- Separator Line -->
    <span class="hidden md:inline-block border-l-2 border-solid border-black dark:border-white h-4/5 ml-4 mr-4"></span>

    <!-- Belfast City Tour Card -->
    <div class="h-fit bg-slate-900 dark:bg-white max-w-sm rounded overflow-hidden shadow-lg mb-16 sm:mb-0">
      <img src="/gallery/IMG-2278.jpg" class="object-cover" alt="" />
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-white dark:text-slate-900">Belfast City Tour</div>
        <p class="text-gray-300 text-base dark:text-gray-700">
          Book your two-hour trip around the heart of Belfast city and discover what life is like for the locals.
        </p>
      </div>
      <div class="px-6 pt-4 pb-2">
        <a href="https://cal.com/tuckers-tours/belfast-city-tour"
          ><span
            class="transition-all dark:hover:bg-slate-900 dark:hover:text-white hover:bg-gray-50 inline-block bg-blue-200 rounded-full px-4 py-4 text-sm font-semibold text-gray-700 mr-2 mb-2"
            >Book Now</span
          ></a
        >
        <a href="/belfast-city-tour"
          ><span
            class="transition-all dark:hover:bg-slate-900 dark:hover:text-white hover:bg-gray-50 inline-block bg-blue-200 rounded-full px-4 py-4 text-sm font-semibold text-gray-700 mr-2 mb-2"
            >Details</span
          ></a
        >
      </div>
    </div>
  </div>
</Layout>
