---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Pricing" title="Fully Qualified & Insured Tour Guide" subtitle="All From Belfast City Centre" />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Have Your Trip Your Way"
    prices={[
      {
        title: 'County Antrim Tour',
        subtitle: 'Giants Causeway G.O.T Location Tour',
        price: 450,
        period: 'Starting At',
        items: [
          {
            description: '£450 for 1-4 People',
          },
          {
            description: 'Then £70 Extra Per Person After Up To 7 People',
          },
          {
            description: 'Tour Length: 7 Hours',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Book Now',
          href: 'https://cal.com/giants-tours/dunluce-castle-tour',
        },
      },
      {
        title: 'City Peace Walls & Mural Tour',
        subtitle: 'Belfast City Peace-Walls & Mural Tour',
        price: 180,
        period: 'Starting At',
        items: [
          {
            description: '£180 for 1-4 People',
          },
          {
            description: 'Then £40 Per Person After Up To 7 People',
          },
          {
            description: 'Tour 2 Hours',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Book Now',
          href: 'https://cal.com/giants-tours/belfast-city-tour',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Airport Transfers',
        subtitle: 'Up to 7 People',
        price: 50,
        period: 'Starting At',
        items: [
          {
            description: 'George Best City Airport Transfers 1-7 People £50',
          },
          {
            description: 'Belfast International Transfers 1-7 People £80',
          },
          {
            description: 'Dublin Airport Transfers 1-7 People £300',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Book Now',
          href: '',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="All From Belfast City Center"
    subtitle="Transport in My Mercedes Vito"
    columns={2}
    items={[
      {
        title: 'Free Wi-Fi & Phone Charging',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '8 Seater Leather Interior & Air Conditioning',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'Free Bottled Water',
        icon: 'tabler:chevrons-up',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready To See What Ireland Has To Offer?"
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: 'https://giantstours.com/book-now',
      },
    ]}
  />
</Layout>
